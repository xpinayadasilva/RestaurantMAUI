<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Restaurant.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Restaurant"
    xmlns:pages="clr-namespace:Restaurant.Pages"
    Title="Restaurant">

    <ShellContent
        Title="Platos"
        ContentTemplate="{DataTemplate pages:PlatosPage}"
        Route="PlatosPage" />
    <ShellContent 
        Title="Platos Ofertados"
        Route="ListaPlatosPage"
        ContentTemplate="{DataTemplate local:ListaPlatosPage}" />

</Shell>
