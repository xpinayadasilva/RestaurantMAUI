<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Restaurant.Pages.ListaPlatosPage"
             Title="Lista de Platos">

    <VerticalStackLayout Padding="10" Spacing="10">

        <!-- Lista -->
        <CollectionView x:Name="PlatosCollection"
                        SelectionMode="Single"
                        SelectionChanged="OnPlatoSeleccionado">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame CornerRadius="16"
                           Padding="14"
                           Margin="5"
                           HasShadow="True">

                        <VerticalStackLayout>
                            <Label Text="{Binding nombre}"
                                   FontAttributes="Bold"
                                   FontSize="Medium"/>

                            <Label Text="{Binding precio, StringFormat='Precio: Bs {0:F2}'}"
                                   TextColor="Green"/>

                            <Label Text="{Binding ingredientes}"
                                   FontSize="Small"
                                   LineBreakMode="TailTruncation"
                                   MaxLines="2"/>
                        </VerticalStackLayout>

                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Paginación -->
        <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">
            <Button Text="◀" Clicked="OnAnteriorClicked"/>
            <Label x:Name="PaginaLabel" />
            <Button Text="▶" Clicked="OnSiguienteClicked"/>
        </HorizontalStackLayout>

        <!-- Botón agregar -->
        <Button Text="➕ Agregar plato"
                Clicked="OnAgregarClicked"/>

    </VerticalStackLayout>
</ContentPage>
