<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Restaurant.Pages.PlatosPage"
             Title="Gestion del Plato">
    <ContentPage.Resources>
        <Style TargetType="Entry">
            <Setter Property="Margin" Value="0,5,0,5"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="Medium"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
        </Style>
    </ContentPage.Resources>


    <ScrollView>
        <VerticalStackLayout Margin="20" Spacing="10">

            <Label Text="Datos del Plato"
                   FontSize="Large"
                   HorizontalOptions="Center"/>

            <!-- Nombre -->
            <Entry Text="{Binding Plato.nombre}"
                   Placeholder="Nombre del plato"/>

            <!-- Precio -->
            <Entry Text="{Binding Plato.precio}"
                   Placeholder="Precio"
                   Keyboard="Numeric"/>

            <!-- Ingredientes -->
            <Editor Text="{Binding Plato.ingredientes}"
                    Placeholder="Ingredientes"
                    AutoSize="TextChanges"
                    HeightRequest="100"/>

            <!-- Botones -->
            <Button Text="Guardar plato"
                    Clicked="OnGuardarClicked"/>

            <Button Text="Eliminar plato"
                    BackgroundColor="IndianRed"
                    Clicked="OnEliminarClicked"/>

            <Button Text="Cancelar"
                    Clicked="OnCancelarClicked"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>